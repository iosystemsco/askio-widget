{
  "name": "@iosystemsco/askio-widget",
  "version": "1.0.0",
  "description": "Embeddable AI chat widget for websites",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles": "./dist/index.css",
    "./headless": {
      "types": "./dist/headless.d.ts",
      "import": "./dist/headless.js",
      "require": "./dist/headless.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "bun run clean && NODE_ENV=production tsc && NODE_ENV=production vite build && NODE_ENV=production vite build --config vite.config.embed.ts && bun run analyze",
    "build:lib": "NODE_ENV=production tsc && NODE_ENV=production vite build",
    "build:embed": "NODE_ENV=production vite build --config vite.config.embed.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "analyze": "bun run analyze:size",
    "analyze:size": "du -sh dist/* | sort -h",
    "prepublishOnly": "bun run build",
    "version": "bun run build && git add -A dist",
    "postversion": "git push && git push --tags",
    "test:package": "./scripts/test-package.sh",
    "pack:check": "npm pack --dry-run",
    "test:embed": "open scripts/test-embed.html",
    "deploy:cloudflare": "./scripts/deploy-cloudflare.sh",
    "deploy:aws": "./scripts/deploy-aws.sh"
  },
  "peerDependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "dependencies": {
    "zustand": "^5.0.8",
    "marked": "^17.0.0",
    "dompurify": "^3.3.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "cssnano": "^7.1.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "terser": "^5.44.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4"
  }
}
